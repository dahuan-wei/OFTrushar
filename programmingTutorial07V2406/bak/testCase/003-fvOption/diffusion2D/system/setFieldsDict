FoamFile
{
    version     2.0;
    format      ascii;
    class       dictionary;
    location    "system";
    object      setFieldsDict;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

defaultFieldValues
(
    volScalarFieldValue T 0
);

regions
(
    sphereToCell 
    {
        centre (0.5 0.5 0.05);
        radius 0.25;

        fieldValues
        (
            volScalarFieldValue T 1
        );
    }
);


